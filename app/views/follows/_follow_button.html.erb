<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_with(model: current_user.follows.find_by(follow_id: user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-outline-danger mx-auto.d-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.follows.build, local: true) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'Follow', class: 'btn btn-outline-primary mx-auto.d-block' %>
    <% end %>
  <% end %>
<% end %>