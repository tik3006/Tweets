<% if users.any? %>
</div>
  <ul class="list-unstyled">
    <% users.each do |user| %>
       <div class="text-center">
      <li class="media">
        <div class="media-body">
        <img class="d-block mx-auto mt-4" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>